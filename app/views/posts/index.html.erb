<div class="main_container">
  
  <h2>スケジュール一覧</h2>
  
  <% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
  <% end %>
  
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    
    <tbody>
     <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_date %></td>
        <td><%= post.end_date %></td>
        <td><%= post.all_day %></td>
        <td><%= post.update_date %></td>
      </tr>
     <% end %>
    </tbody>
  </table>
  
  <p><%= link_to"スケジュール新規登録",new_post_path %></p>
</div>
