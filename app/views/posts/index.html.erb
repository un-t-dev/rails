<div class="main_container">
  
  <h2>スケジュール一覧</h2>
   
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>作成日</th>
        <th>更新日</th>
        <th>内容</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    
    <tbody>
     <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_date %></td>
        <td><%= post.end_date %></td>
        <td><%= post.created_at.to_s(:datetime_jp) %></td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "内容", post %></td>
        <td><%= link_to "編集", [:edit, post] %></td>
        <td><%= link_to "削除", post, method: :delete, date: { confirm: "本当に削除しますか?" } %>
        </td>
      </tr>
     <% end %>
    </tbody>
  </table>
  
  <p><%= link_to"スケジュール新規登録", new_post_path %></p>
</div>
