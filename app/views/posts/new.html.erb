<div class="main_container">
  <div class="information">
    <h2>スケジュール新規作成</h2>
  </div>
  
  <%= form_with model: @user do |f| %>
   <table>
     <tr>
       <th><%= f.label :title, "タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
     <tr>
       <th><%= f.label :start_date, "開始日" %></th>
       <td><%= f.date_select :start_date %></td>
     </tr>
     <tr>
       <th><%= f.label :end_date, "終了日" %></th>
       <td><%= f.date_select :end_date %></td>
     </tr>
     <tr>
       <th><%= f.label :all_day, "終日" %></th>
       <td><%= f.check_box :all_day, {}, :status_difference, nil %></td>
     </tr>
   </table>
</div>
<% end %>