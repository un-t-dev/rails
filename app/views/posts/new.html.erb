<div class="main_container">
  
  <h2>スケジュール新規作成</h2>
  
  <%= form_with model: @user do |f| %>
   <table>
     <tr>
       <th><%= f.label :title, "タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
     <tr>
       <th><%= f.label :start_date, "開始日" %></th>
       <td><%= f.date_select :start_date %></td>
     </tr>
     <tr>
       <th><%= f.label :end_date, "終了日" %></th>
       <td><%= f.date_select :end_date %></td>
     </tr>
     <tr>
       <th><%= f.label :all_day, "終日" %></th>
       <td><%= f.check_box :all_day, {}, :status_difference, nil %></td>
     </tr>
     <tr>
         <th><%= f.label :memo, "メモ" %></th>
         <td><%= f.text_area :memo %></td>
     </tr>
   </table>
   <div>
       <ul>
           <li><%= f.submit"新規登録する" %></li>
           <li><%= link_to "スケジュール一覧に戻る",posts_path %></li>
       </ul>
   </div>
  <% end %>
</div>
