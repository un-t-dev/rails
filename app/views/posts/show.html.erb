<div class="main_container">

<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.start_date %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @post.end_date %></td>
  </tr>
  <tr>
    <th>作成日</th>
    <td><%= @post.created_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @post.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to"スケジュール一覧に戻る", posts_path %></li>
  </ul>
</div>
</div>